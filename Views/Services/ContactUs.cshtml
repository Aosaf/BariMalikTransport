<script>
    $(document).ready(function () {

        $("#contactForm").submit(function (e) {
            submitContactForm();

            e.preventDefault();
        });

        function submitContactForm() {
            debugger;
            var name = $('#name').val();
            var email = $('#email').val();
            var message = $('#message').val();

            if (name && email && message) {

                $.ajax({
                    method: "POST",
                    url: "https://script.google.com/macros/s/AKfycbygP8-S6Rx9FSmwzqkoXT1EUSqS4uV5p9gHzHbc/exec",
                    data: $("#contactForm").serialize()
                })
                .done(function (response) {
                    if (response.result == "success") {
                        $("#contactForm").trigger('reset');
                        $('#exampleModalCenter').modal('show');
                    }
                    else {
                        alert("An error occured while submitting your response. Please try again later.");
                    }
                });
            }
            else {
                alert('Required filled are empty'); //Validation Message
            }
        }
    });
</script>